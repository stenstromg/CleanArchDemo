@inherits LayoutComponentBase
<div class="page">
<RadzenComponents @rendermode="InteractiveServer"/>
<RadzenLayout class="unq-main-layout">

    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(()=>{ this.Toggle_OnClick(); })" />
            <RadzenLabel Text="Header" />
        </RadzenStack>
    </RadzenHeader>

    <RadzenSidebar Expanded="@sidebar1Expanded">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Home"  Icon="home"  Path="/"/>
            <RadzenPanelMenuItem Text="Contacts" Icon="group" Path="/Contacts"/>
            <RadzenPanelMenuItem Text="Budget" Icon="payments" Path="/Budget"/>
            <RadzenPanelMenuItem Text="Sales" Icon="area_chart" Path="Sales"/>
        </RadzenPanelMenu>
    </RadzenSidebar>

    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>

    <RadzenFooter>
        Footer
    </RadzenFooter>

</RadzenLayout>

</div>
