
@inherits UnqComponentBase

<RadzenTemplateForm TItem="UserLoginRegistrationModel" Data="@this.FormData" Submit="@form_OnSubmit" InvalidSubmit="@form_OnInvalidSubmit" class="unq-register-form">

<RadzenCard Variant="@Variant.Filled" class="unq-register-title">
    <label>Register</label>
</RadzenCard>


<RadzenCard Variant="@Variant.Filled" class="unq-newlogin-component">
    <RadzenStack Orientation="@Orientation.Vertical" Style="max-width:50vw;">


        <RadzenStack Orientation="@Orientation.Vertical" class="unq-row-container">
            <div class="unq-row unq-row-firstName">
                <div class="unq-labeled-textbox-container">
                    <label class="unq-textbox-label">First Name</label>
                    <RadzenTextBox @bind-Value="@this.FormData.Person.FirstName" Name="FirstName"></RadzenTextBox>
                </div>
            </div>
            <div class="unq-row unq-row-lastName">
                <div class="unq-labeled-textbox-container">
                    <label class="unq-textbox-label">Last Name</label>
                    <RadzenTextBox @bind-Value="@this.FormData.Person.LastName" Name="LastName"></RadzenTextBox>
                </div>
            </div>
            <div class="unq-row unq-row-email">
                <div class="unq-labeled-textbox-container">
                    <label class="unq-textbox-label">Email</label>
                    <RadzenTextBox @bind-Value="@this.FormData.EmailAddress" Name="Email"></RadzenTextBox>
                </div>
            </div>
            <div class="unq-row unq-row-username">
                <div class="unq-labeled-textbox-container">
                    <label class="unq-textbox-label">Username</label>
                    <RadzenTextBox @bind-Value="@this.FormData.Username" Name="Username"></RadzenTextBox>
                </div>
            </div>
            <div class="unq-row unq-row-pwd1">
                <div class="unq-labeled-textbox-container">
                    <label class="unq-textbox-label">Password</label>
                    <RadzenPassword @bind-Value="@this.FormData.Password.NewPassword" Name="NewPWD"></RadzenPassword>
                </div>
                <RadzenRequiredValidator Component="NewPWD" Text="Enter Password" Popup="true" Style="position: absolute"/>
            </div>
            <div class="unq-row unq-row-pwd2">
                <div class="unq-labeled-textbox-container">
                    <label class="unq-textbox-label">Password</label>
                    <RadzenPassword @bind-Value="@this.FormData.Password.ConfirmPassword" Name="RepeatPWD"></RadzenPassword>
                </div>
                <RadzenRequiredValidator Component="RepeatPWD" Text="Enter Password" Popup="true" Style="position: absolute" />
                    <RadzenCompareValidator Component="RepeatPWD" Value="@this.FormData.Password.NewPassword" Text="Passwords should match" />
            </div>
            <div class="unq-row unq-row-save-button">
                <RadzenButton Variant="@Variant.Filled" Text="Register" ButtonStyle="@ButtonStyle.Primary" ButtonType="@ButtonType.Submit" />
                <RadzenButton Variant="@Variant.Text" Text="Cancel"     ButtonStyle="@ButtonStyle.Base" Click="@(()=> btnCancel_OnClick())" />
            </div>
        </RadzenStack>

    </RadzenStack>
</RadzenCard>
</RadzenTemplateForm>